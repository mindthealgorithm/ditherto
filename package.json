{
  "name": "ditherto",
  "version": "0.1.0",
  "description": "Pixelate your life by dithering your images to fixed colour palette",
  "keywords": [
    "dithering",
    "image",
    "pixel",
    "palette",
    "graphics"
  ],
  "homepage": "https://github.com/vexlin/ditherto",
  "bugs": "https://github.com/vexlin/ditherto/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vexlin/ditherto.git"
  },
  "license": "MIT",
  "author": "Jessey White-Cinis <j@cin.is>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs",
      "types": "./dist/browser.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ditherto": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest",
    "test:node": "vitest --config vitest.config.ts",
    "test:browser": "vitest --config vitest.browser.config.ts",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "npx biome lint src/",
    "lint:fix": "npx biome lint --write src/",
    "format": "npx biome format --write src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/node": "^22.8.4",
    "@vitest/coverage-v8": "^2.1.3",
    "jsdom": "^25.0.1",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.74"
  }
}
